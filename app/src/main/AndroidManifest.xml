<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swen_anigans.mathematicfanatic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light"
        android:supportsRtl="true">
        <activity android:name=".MainActivity"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuardianSettings"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".StudentSettings"
            android:theme="@style/GuardianTheme" />
        <activity
            android:name=".StudentLocker"
            android:parentActivityName=".MainActivity"
            android:theme="@style/LockerTheme">

        </activity>
        <activity
            android:name=".activity_help"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".QuizStartActivity"
            android:parentActivityName=".MainActivity"
            >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuizActivity"
            android:parentActivityName=".QuizStartActivity">

        </activity>
        <activity android:name=".QuizSubmissionActivity"
            android:parentActivityName=".QuizActivity"></activity>
    </application>

</manifest>