<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin">
    
    <Button
        android:id="@+id/student_button"
        android:layout_width="@dimen/long_button_width"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginEnd="5dp"
        android:theme="@style/StudentButton"
        android:onClick="ToLocker" />

    <Button
        android:id="@+id/progress_report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/student_button"
        android:layout_alignBottom="@id/student_button"
        android:layout_toRightOf="@id/student_button"
        android:textAlignment="center"
        android:text="@string/progress_report_button"
        android:theme="@style/ProgressReportButton"
        android:enabled="false"/>

</RelativeLayout>