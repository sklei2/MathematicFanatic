<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classroom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="swen_anigans.mathematicfanatic.ClassroomActivity">

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkButton"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/nextButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="PREV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nextButton"
        android:layout_toStartOf="@+id/checkButton"
        android:layout_marginEnd="19dp"
        android:id="@+id/previousButton" />

    <TextView
        android:text="1/20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/questionNumber"
        android:textColor="FFFFFF"
        android:textSize="30px"
        />

    <TextView
        android:text="3 X 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionAsked"
        android:layout_below="@+id/questionNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textSize="60px"
        android:textColor="FFFFFF"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/checkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:id="@+id/answer"
        android:text="0"
        android:textAlignment="center" />

</RelativeLayout>
