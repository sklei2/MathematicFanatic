<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classroom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swen_anigans.mathematicfanatic.ClassroomActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">
        <!--.AppBarOverlay-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/classroomPrimary">

            <TextView
                style="@style/ActionBarText"
                android:text="Classroom"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="1/20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizPagesComplete"
        android:textColor="@color/guardianPrimaryDark"
        android:textSize="20sp"
        android:background="@drawable/border"
        android:height="30dp"
        android:width="60dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/classroomQuestion"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/quizPagesComplete"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkButton"
        android:layout_alignStart="@+id/editClassroomAnswer"
        android:layout_alignEnd="@+id/editClassroomAnswer"
        android:layout_below="@+id/editClassroomAnswer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&gt;"
        android:id="@+id/nextButton"
        android:textSize="40sp"
        android:onClick="nextPage"
        android:layout_alignEnd="@+id/quizPagesComplete"
        android:layout_toEndOf="@+id/classroomQuestion"
        android:layout_below="@+id/checkButton"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/prevButton"
        android:textSize="40sp"
        android:onClick="previousPage"
        android:layout_marginStart="26dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/classroomQuestion"
        android:layout_below="@+id/checkButton"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/goToHelpButton"
        android:background="@drawable/help_icon"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:layout_marginStart="11dp"
        android:onClick="goToHelp"/>

    <Button
        android:text="Return To Locker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnToLocker"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/checkButton"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="goToLocker" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editClassroomAnswer"
        android:textAlignment="center"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/classroomQuestion"
        android:layout_toStartOf="@+id/quizPagesComplete" />

</RelativeLayout>
